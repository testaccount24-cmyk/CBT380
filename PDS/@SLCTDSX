  ISREDIT &$D$ &STR("//*                           ===> FIND FIRST 'IV2004:'
  ISREDIT &$D$ &STR("//&VAR043. EXEC SLCTPDS,SYSOUT=V,PGMPARM='NOLIST,LC(88)',
  ISREDIT &$D$ &STR("//           LIB='&VAR018A.'  <== ?? CHECK DSNAME
  ISREDIT &$D$ &STR("//DEFAULT OUTPUT LINECT=0,CHARS=GC15,FCB=2X85
  ISREDIT &$N$ &STR("==========> PLEASE CHECK THAT LIB=  BELOW HAS CORRECT DSNAM
  ISREDIT &$D$ &STR("//SYSIN     DD  * OPTIONAL SELECT MEMBER CARDS FOLLOW
  IF &EXAMP ^= &VAR043. THEN -
     ISREDIT &$D$ &STR("EXCLUDE-&VAR043.*      SPECIFICALLY EXCLUDES MEMBER &VAR
     ISREDIT &$D$ &STR("INCLUDE-&&              SPECIFICALLY INCLUDE ALL OTHER M
  ISREDIT &$N$ &STR("==========> PLEASE CHECK MEMBER SELECTION AFTER //SYSIN DD
  ISREDIT &$N$ &STR("==========> REMOVE ALL SELECTIONS TO PRINT / SEARCH ENTIRE
  ISREDIT &$D$ &STR("================ PLACEMENT OF ENDING COMMENT ==============
  ISREDIT &$N$ &STR("===========================================================
  ISREDIT &$N$ &STR("| SELECTION CRITERIA  USED BY PGM=IZ2018 IN PROC=SLCTTSO IS
  ISREDIT &$N$ &STR("|      AS USED BY PGM=IZ2019 AND CONSISTS OF EXAMINATION OF
  ISREDIT &$N$ &STR("|      NAMES, CHECKING ON CORRESPONDING POSITIONS OF MEMBER
  ISREDIT &$N$ &STR("| @,#,$,A-Z,0-9   EXACT MATCH IN CORRESPONDING COLUMN REQUI
  ISREDIT &$N$ &STR("| %               MUST BE A LETTER @,#,$,A-Z
  ISREDIT &$N$ &STR("| +               MUST BE A DIGIT 0-9 IN CORRESPONDING COLU
  ISREDIT &$N$ &STR("| *               MUST BE A BLANK, HENCE REMAINDER ALSO BLA
  ISREDIT &$N$ &STR("|//SYSIN  DD *
  ISREDIT &$N$ &STR("|EXCLUDE- BCD      EXCLUDE CARDS MUST PRECEDE INCLUDE-  CAR
  ISREDIT &$N$ &STR("|EXCLUDE-A   E     EXCLUDE MEMBERS BEGINNING WITH 'A', AND
  ISREDIT &$N$ &STR("|INCLUDE-ABCDE     MEMBER ABCDE EXCLUDED ABOVE, BUT ABCDE1
  ISREDIT &$N$ &STR("|ABCED             SAME AS   IF PREFIXED WITH INCLUDE-ABCDE
  ISREDIT &$N$ &STR("===========================================================
  ISREDIT &$N$ &STR("|USAGE:         SOURCE TYPE PDS -- NOT RECFM=U
  ISREDIT &$N$ &STR("|PURPOSE: PRINT MEMBERS OF A PDS, AND/OR
  ISREDIT &$N$ &STR("|         SEARCH FOR CHARACTER STRINGS IN A PDS, AND/OR
  ISREDIT &$N$ &STR("|         SELECT MEMBERS BY PGM=IZ2019 STANDARDS
  ISREDIT &$N$ &STR("|         PROC=SLCTTSO SET UP TO PRINT ON A 3800
  ISREDIT &$N$ &STR("|ADDITIONAL INFORMATION:   ===> TSO INFOHELP PGMINDX
